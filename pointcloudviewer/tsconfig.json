{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "ESNext", // <-- CHANGE THIS
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node", // ignore
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "components/**/*"
  ]
}
